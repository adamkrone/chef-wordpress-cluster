global
  log 127.0.0.1   local0
  log 127.0.0.1   local1 notice
  maxconn {{key "haproxy/global/maxconn"}}
  user haproxy
  group haproxy

defaults
  log     global
  mode    http
  retries 3
  timeout client 50s
  timeout connect 5s
  timeout server 50s
  option dontlognull
  option httplog
  option redispatch
  balance  roundrobin

frontend http
  maxconn 2000
  bind 0.0.0.0:80

<% @sites.each do |site| %>
  acl host_<%= site[:name] %> hdr(host) -i <%= site[:host] %>
<% end %>

<% @sites.each do |site| %>
  use_backend <%= site[:name] %>_cluster if host_<%= site[:name] %>
<% end %>

<% @sites.each do |site| %>
backend <%= site[:name] %>_cluster
  {{range service "<%= site[:service] %>@<%= @datacenter %>"}}
  server {{.Name}} {{.Address}}:{{.Port}}{{end}}

<% end %>

